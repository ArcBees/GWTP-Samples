<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="tabsResources" type="com.gwtplatform.samples.tab.client.resources.TabsResources"/>

    <g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{tabsResources.style.bar}">
            <g:FlowPanel ui:field="tabPanel"/>
            <div style="clear: both;"/>
        </g:HTMLPanel>
        <g:FlowPanel ui:field="tabContentContainer" addStyleNames="{tabsResources.style.panel}"/>
    </g:HTMLPanel>
</ui:UiBinder>
